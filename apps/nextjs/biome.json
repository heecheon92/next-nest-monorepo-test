          },
          "style": {
            "noCommonJs": "error",
            "noDefaultExport": "error",
            "noInferrableTypes": "off",
            "useConst": "error"
          },
          "suspicious": {
            "noEmptyBlockStatements": "off",
            "noExplicitAny": "off",
            "useAwait": "error"
          }
        }
      }
    },
    {
      "includes": [
        "*.config.{js,mjs,cjs,ts,mts,jsx,tsx}",
        "**/manifest.{js,ts}",
        "**/*.d.ts",
        "**/default.{jsx,tsx}",
        "**/error.{jsx,tsx}",
        "**/global-error.{jsx,tsx}",
        "**/forbidden.{jsx,tsx}",
        "**/instrumentation.{jsx,tsx}",
        "**/layout.{jsx,tsx}",
        "**/loading.{jsx,tsx}",
        "**/mdx-components.{jsx,tsx}",
        "**/not-found.{jsx,tsx}",
        "**/page.{jsx,tsx}",
        "**/template.{jsx,tsx}",
        "**/unauthorized.{jsx,tsx}"
      ],
      "linter": { "rules": { "style": { "noDefaultExport": "off" } } }
    },
    {
      "includes": ["*.config.{js,mjs,cjs,ts,mts,jsx,tsx}"],
      "linter": { "rules": { "style": { "noCommonJs": "off" } } }
    },
    {
      "includes": ["**/*.{jsx,tsx}"],
      "linter": { "rules": { "suspicious": { "useAwait": "warn" } } }
    },
    {
      "includes": ["**/action.ts"],
      "linter": { "rules": { "suspicious": { "useAwait": "off" } } }
    },
    {
      "includes": ["**/*.{js,mjs,cjs,ts,mts,jsx,tsx}"],
      "javascript": { "globals": [] },
      "linter": {
        "rules": {
          "complexity": {
            "noUselessCatch": "error",
            "noUselessEscapeInRegex": "warn"
          },
          "correctness": {
            "noUnusedImports": "error",
            "noUnusedVariables": "error",
            "useExhaustiveDependencies": "off",
            "useJsxKeyInIterable": "error"
          },
          "nursery": { "noFloatingPromises": "error" },
          "style": {
            "noCommonJs": "error",
            "noDefaultExport": "error",
            "noInferrableTypes": "off",
            "useConst": "error"
          },
          "suspicious": {
            "noEmptyBlockStatements": "off",
            "noExplicitAny": "off",
            "useAwait": "error"
          }
        }
      }
    },
    {
      "includes": [
        "*.config.{js,mjs,cjs,ts,mts,jsx,tsx}",
        "**/manifest.{js,ts}",
        "**/*.d.ts",
        "**/default.{jsx,tsx}",
        "**/error.{jsx,tsx}",
        "**/global-error.{jsx,tsx}",
        "**/forbidden.{jsx,tsx}",
        "**/instrumentation.{jsx,tsx}",
        "**/layout.{jsx,tsx}",
        "**/loading.{jsx,tsx}",
        "**/mdx-components.{jsx,tsx}",
        "**/not-found.{jsx,tsx}",
        "**/page.{jsx,tsx}",
        "**/template.{jsx,tsx}",
        "**/unauthorized.{jsx,tsx}"
      ],
      "linter": { "rules": { "style": { "noDefaultExport": "off" } } }
    },
    {
      "includes": ["*.config.{js,mjs,cjs,ts,mts,jsx,tsx}"],
      "linter": { "rules": { "style": { "noCommonJs": "off" } } }
    },
    {
      "includes": ["**/*.{jsx,tsx}"],
      "linter": { "rules": { "suspicious": { "useAwait": "warn" } } }
    },
    {
      "includes": ["**/action.ts"],
      "linter": { "rules": { "suspicious": { "useAwait": "off" } } }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on" } }
  }
}
